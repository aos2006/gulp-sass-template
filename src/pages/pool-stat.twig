{% extends '../blocks/layout/layout.twig' %}
{% block content %}
    <main class="main main--theme-gray">
        <div class="main__i">
            {% embed '../blocks/banner/banner.twig' with {bannerClass: 'banner--type-presentation banner--type-pool-stats'}%}
                {% block content %}
                    <div class="banner__info">
                        <div class="banner__breadcrumbs">
                            {% include '../blocks/breadcrumbs/breadcrumbs.twig' %}
                        </div>
                        <h2 class="banner__title banner__title--large">
                            P2Pool Stat
                        </h2>
                    </div>
                {% endblock %}
            {% endembed %}
            <div class="container pool-stats">
                <p class="pool-stats__description">
                    Novacoin <a href="#" class="link">P2Pool</a> is a decentralized mining pool that works by creating a peer-to-peer network of miner nodes.
                    Get <a href="#" class="link">sources</a> or <a href="#" class="link">binaries.</a>
                </p>
                <div class="graphic pool-stats__graphic">

                </div>
                {% include '../blocks/link/link.twig' with {
                    linkTxt: 'How to P2Pool on Wiki',
                    href: '#',
                    linkClass: 'pool-stats__link'
                } %}
               {% embed '../blocks/tabs/tabs.twig' %}
                   {% block content %}
                       <div id="tab-1" class="tabs__content tabs__content--active">
                           {% include '../blocks/title/title.twig' with {
                               h3: true,
                               titleTxt: 'Users pool rate percent and payouts if a block were found now',
                               titleClass: 'tabs__title title--aligment-left'
                           } %}
                           {% include '../blocks/table/table.twig' with {
                                table: table,
                                tableClass: 'table--layout-auto',
                                withFooter: true
                           }%}
                       </div>
                       <div id="tab-2" class="tabs__content">
                           {% include '../blocks/title/title.twig' with {
                           h3: true,
                           titleTxt: 'Tab 2',
                           titleClass: 'tabs__title title--aligment-left'
                           } %}
                           {% include '../blocks/table/table.twig' with {
                           table: table,
                           tableClass: 'table--layout-auto'
                           }%}
                       </div>
                       <div id="tab-3" class="tabs__content">
                           {% include '../blocks/title/title.twig' with {
                           h3: true,
                           titleTxt: 'Tab3',
                           titleClass: 'tabs__title title--aligment-left'
                           } %}
                           {% include '../blocks/table/table.twig' with {
                           table: table,
                           tableClass: 'table--layout-auto'
                           }%}
                       </div>
                       <div id="tab-4" class="tabs__content">
                           {% include '../blocks/title/title.twig' with {
                           h3: true,
                           titleTxt: 'Tab4',
                           titleClass: 'tabs__title title--aligment-left'
                           } %}
                           {% include '../blocks/table/table.twig' with {
                           table: table,
                           tableClass: 'table--layout-auto'
                           }%}
                       </div>
                    {% endblock %}
                {% endembed %}
            </div>
        </div>
    </main>
{% endblock %}
