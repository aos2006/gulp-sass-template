{% set accordion = [
{title: "Most recently mined blocks in the Novacoin block chain", content: 'raz dva tri', defaultState: 'accordion__item--expanded', index: 1},
] %}
{% extends '../blocks/layout/layout.twig' %}
{% block content %}
    <main class="main main--theme-gray">
        <div class="main__i">
            {% embed '../blocks/banner/banner.twig' with {bannerClass: 'banner--type-presentation banner--type-explorer'}%}
                {% block content %}
                    <div class="banner__info">
                        <div class="banner__breadcrumbs">
                            {% include '../blocks/breadcrumbs/breadcrumbs.twig' %}
                        </div>
                        <h2 class="banner__title banner__title--large">
                            Eplorer
                        </h2>
                    </div>
                    <div class="banner__search">
                        {% include '../blocks/search/search.twig' %}
                    </div>
                {% endblock %}
            {% endembed %}
             <div class="page__table container">
                 {% embed '../blocks/accordion/accordion.twig' %}
                     {% block content %}
                         {% for item in accordion %}
                         <li class="accordion__item {{ item.defaultState }} js-accordion-item" data-eq="{{ item.index }}">
                             <header class="accordion__header js-accordion-header">
                                 <h3 class="accordion__title">{{ item.title }}</h3>
                                 <i class="accordion__icon">
                                     {% include '../blocks/icon/icon.twig'  with {
                                     icon: 'arrow-dropdown',
                                     iconClass: 'arrow-accordion-down'
                                     } %}
                                 </i>
                             </header>
                             <div class="accordion__table js-accordion-content accordion__content">
                                 {% include '../blocks/table/table.twig' with {
                                     table: table
                                 }%}
                                 <div class="page__btn">
                                     {% include '../blocks/button/button.twig' with {
                                     btnTxt: 'More blocks',
                                     btnClass: 'btn--green'
                                     } %}
                                 </div>
                             </div>
                         </li>
                    {% endfor %}
                 {% endblock %}
                 {% endembed %}
             </div>

            <div class="page__table container page__table--type-sidebar">
                {% embed '../blocks/accordion/accordion.twig' %}
                    {% block content %}
                        {% for item in accordion %}
                            <li class="accordion__item {{ item.defaultState }} js-accordion-item" data-eq="{{ item.index }}">
                                <header class="accordion__header js-accordion-header">
                                    <h3 class="accordion__title">{{ item.title }}</h3>
                                    <i class="accordion__icon">
                                        {% include '../blocks/icon/icon.twig'  with {
                                        icon: 'arrow-dropdown',
                                        iconClass: 'arrow-accordion-down'
                                        } %}
                                    </i>
                                </header>
                                <div class="accordion__table js-accordion-content accordion__content container">
                                    {% include '../blocks/table/table.twig' with {
                                        table: table2
                                    }%}
                                    <div class="page__btn">
                                        {% include '../blocks/button/button.twig' with {
                                        btnTxt: 'More blocks',
                                        btnClass: 'btn--green'
                                        } %}
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
                <aside class="sidebar">
                    <article class="sidebar__item sidebar-item">
                        <header class="sidebar-item__header sidebar-item__header--theme-green">
                            {% include '../blocks/title/title.twig' with {
                            h3: true,
                            titleTxt: 'Other useful links',
                            titleClass: 'sidebar-item__title'
                            } %}
                        </header>
                        <div class="sidebar-item__links sidebar-item__i sidebar-item__i--category">
                            <a href="#" class="sidebar-item__link link link--size-xs">Novaco.in API methods (new link)</a>
                            <a href="#" class="sidebar-item__link link link--size-xs">Novaco.in API methods (new link)</a>
                            <a href="#" class="sidebar-item__link link link--size-xs">Novaco.in API methods (new link)</a>
                        </div>
                    </article>
                </aside>
            </div>

        </div>
    </main>
{% endblock %}
