<!-- start navigation --><nav class="navigation {{ navigationClass }}">    <ul class="navigation__list">        {% for item in items %}        <li class="navigation__item {{ item.defaultState }}">            <a href="{{ item.href }}" class="navigation__link">{{ item.txt }}</a>            {% if item.withDropdown %}                {% include '../icon/icon.twig' with {                    icon: 'arrow-dropdown',                    iconClass: 'navigation__icon'                } %}                {% include '../dropdown/dropdown.twig' with {                    list: item.list                } %}            {% endif %}        </li>        {% endfor %}    </ul></nav><!-- end navigation -->